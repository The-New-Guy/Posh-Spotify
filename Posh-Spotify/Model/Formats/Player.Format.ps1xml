<?xml version="1.0" encoding="utf-8" ?>
<Configuration>
    <ViewDefinitions>
        <View>
            <Name>NewGuy.PoshSpotify.PlayerContext</Name>
            <ViewSelectedBy>
                <TypeName>NewGuy.PoshSpotify.PlayerContext</TypeName>
            </ViewSelectedBy>
            <ListControl>
                <ListEntries>
                    <ListEntry>
                        <ListItems>
                            <ListItem>
                                <PropertyName>Track</PropertyName>
                            </ListItem>
                            <ListItem>
                                <Label>Artists</Label>
                                <ItemSelectionCondition>
                                    <ScriptBlock> $_.Track.Artists -ne $null </ScriptBlock>
                                </ItemSelectionCondition>
                                <ScriptBlock> If ($_.Track.Artists.Count -gt 5) { ($_.Track.Artists | Select-Object Name -First 5) + ' ...' } Else { $_.Track.Artists } </ScriptBlock>
                            </ListItem>
                            <ListItem>
                                <Label>Album</Label>
                                <ItemSelectionCondition>
                                    <ScriptBlock> $_.Track.Album -ne $null </ScriptBlock>
                                </ItemSelectionCondition>
                                <ScriptBlock> $_.Track.Album </ScriptBlock>
                            </ListItem>
                            <ListItem>
                                <Label>Progress</Label>
                                <ScriptBlock>
                                    If ($_.Progress -ne $null) {
                                        '{0:D2}:{1:D2}:{2:D2} / {3:D2}:{4:D2}:{5:D2}' -f $_.Progress.Hours, $_.Progress.Minutes, $_.Progress.Seconds, $_.Track.Duration.Hours, $_.Track.Duration.Minutes, $_.Track.Duration.Seconds
                                    } Else {
                                        '--:--:-- / {0:D2}:{1:D2}:{2:D2}' -f $_.Track.Duration.Hours, $_.Track.Duration.Minutes, $_.Track.Duration.Seconds
                                    }
                                </ScriptBlock>
                            </ListItem>
                            <ListItem>
                                <PropertyName>IsPlaying</PropertyName>
                            </ListItem>
                        </ListItems>
                    </ListEntry>
                </ListEntries>
            </ListControl>
        </View>
        <View>
            <Name>Table</Name>
