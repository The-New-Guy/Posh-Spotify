                    </TableColumnHeader>
                    <TableColumnHeader>
                        <Label>Progress</Label>
                        <Width>30</Width>
                        <Alignment>Center</Alignment>
                    </TableColumnHeader>
                    <TableColumnHeader>
                        <Width>10</Width>
                        <Alignment>Center</Alignment>
                    </TableColumnHeader>
                </TableHeaders>
                <TableRowEntries>
                    <TableRowEntry>
                        <TableColumnItems>
                            <TableColumnItem>
                                <PropertyName>Track</PropertyName>
                            </TableColumnItem>
                            <TableColumnItem>
                                <ScriptBlock> $_.Track.Album </ScriptBlock>
